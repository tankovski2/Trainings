@using BuildMyOwnFramework.Domain
@model BuildMyOwnFramework.Domain.IssueType
@{
    var options = Enum.GetValues(typeof(IssueType))
    .Cast<IssueType>()
    .Select(t => new SelectListItem
    {
        Text = t.ToString(),
        Value = t.ToString(),
        Selected = t == Model
    })
    .ToArray();

}

@Html.DropDownList("", options, new { @class = "form-control" })
